---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { ArrowLeft, ArrowRight, FileText } from 'lucide-react';

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: ImageMetadata;
    headings?: { depth: number; slug: string; text: string }[];
    relatedPosts?: CollectionEntry<'blog'>[];
}

const { title, description, pubDate, updatedDate, heroImage, headings = [], relatedPosts = [] } = Astro.props;

// Only show TOC if there are more than 1 heading
const showTOC = headings.length > 1;
---

<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			image={heroImage}
			articleDate={pubDate}
			articleModified={updatedDate}
			type="article"
		/>
	</head>

	<body class="bg-zinc-950 text-zinc-100 flex flex-col min-h-screen font-mono">
        <!-- Reading Progress Bar (Mobile) -->
        <div id="progress-bar" class="fixed bottom-0 left-0 h-0.5 bg-blue-500/60 z-[60] md:hidden shadow-[0_0_10px_rgba(59,130,246,0.6)] transition-all ease-out" style="width: 0%; transition-duration: 150ms;"></div>
        
        <!-- Search Modal (Desktop) -->
        <div id="search-modal" class="hidden fixed inset-0 bg-zinc-950/0 backdrop-blur-0 z-[70] items-start justify-center pt-32 transition-all duration-300">
            <div class="w-full max-w-2xl mx-4 transform translate-y-4 opacity-0 transition-all duration-300" id="search-modal-content">
                <!-- Search Input -->
                <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden shadow-2xl shadow-blue-500/10">
                    <div class="flex items-center gap-3 px-4 py-3 border-b border-zinc-800 bg-zinc-900/50">
                        <span class="text-blue-500 text-base md:text-sm font-bold">grep</span>
                        <input 
                            type="text" 
                            id="page-search-input"
                            class="flex-1 bg-transparent border-none outline-none text-zinc-100 placeholder-zinc-500 text-base md:text-sm font-mono"
                            placeholder="Search this page..."
                            autocomplete="off"
                        />
                        <span class="text-xs text-zinc-600 font-mono">ESC to close</span>
                    </div>
                    <!-- Results -->
                    <div id="search-results" class="max-h-[60vh] overflow-y-auto">
                        <div class="p-4 text-center text-zinc-600 text-sm">
                            Type to search...
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
		<Header />
		<main class="w-full max-w-7xl mx-auto px-4 py-4 md:py-8 flex-grow flex gap-8 relative">
            
            <!-- Table of Contents (Desktop) -->
            {showTOC && (
                <aside class="hidden lg:block w-64 flex-shrink-0 order-2">
                    <div class="sticky top-24 flex flex-col max-h-[calc(100vh-7rem)]">
                        <!-- Search Trigger -->
                        <button 
                            id="search-trigger-toc" 
                            class="w-full flex items-center justify-between px-3.5 py-2.5 mb-6 rounded-lg bg-zinc-900 border border-zinc-800 hover:border-blue-500/50 transition-all group flex-shrink-0"
                            aria-label="Search this page"
                        >
                            <div class="flex items-center gap-2.5">
                                <span class="text-blue-500 group-hover:text-blue-400 text-sm font-bold">grep</span>
                                <span class="text-xs text-zinc-500 group-hover:text-zinc-400 transition-colors">this page</span>
                            </div>
                            <kbd class="inline-flex items-center gap-0.5 px-2 py-1 bg-zinc-800 border border-zinc-700 rounded text-sm font-mono text-zinc-200 group-hover:text-white group-hover:border-zinc-600 transition-colors font-semibold">
                                <span class="text-[13px]">⌘</span><span class="text-[13px]">K</span>
                            </kbd>
                        </button>

                        <div class="border-l border-zinc-800 pl-4 overflow-y-auto flex-1 pr-2 custom-scrollbar min-h-0">
                            <h3 class="font-bold text-zinc-400 mb-4 text-sm uppercase tracking-wider">
                                On this page
                            </h3>
                            <ul class="space-y-2 text-sm pb-4" id="toc-list">
                                {headings.map((heading) => (
                                    <li class={`
                                        ${heading.depth === 2 ? 'ml-0' : ''}
                                        ${heading.depth === 3 ? 'ml-4' : ''}
                                        ${heading.depth > 3 ? 'ml-6' : ''}
                                    `}>
                                        <a href={`#${heading.slug}`} 
                                           class="toc-link block text-zinc-500 hover:text-blue-400 transition-colors line-clamp-1 border-l-2 border-transparent hover:border-blue-500 pl-2 -ml-px"
                                           data-slug={heading.slug}>
                                            {heading.text}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                </aside>
            )}

            <div class={`flex-grow max-w-4xl mx-auto ${showTOC ? 'lg:mx-0' : ''} w-full min-w-0`}>
                <!-- Back Button (Top) -->
                <a href="/blog" class="inline-flex items-center gap-2 text-zinc-500 hover:text-blue-400 mb-4 md:mb-8 transition-colors group text-sm">
                    <ArrowLeft className="w-3.5 h-3.5 md:w-4 md:h-4 group-hover:-translate-x-1 transition-transform" />
                    <span>cd ..</span>
                </a>

                <!-- Terminal Header Bar -->
                <div class="mb-4 md:mb-6 flex items-center justify-between border-b border-zinc-800 pb-2 text-xs md:text-sm text-zinc-500">
                    <div class="flex items-center gap-2">
                        <span class="text-blue-500 font-bold">vim</span>
                        <span class="truncate max-w-[150px] md:max-w-none">{title.toLowerCase().replace(/\s+/g, '-').slice(0, 20)}.md</span>
                    </div>
                    <div class="flex items-center gap-2 md:gap-4">
                        <span class="hidden md:inline">utf-8</span>
                        <span class="hidden sm:inline">markdown</span>
                        <span class="hidden md:inline">100%</span>
                    </div>
                </div>

                <article class="prose prose-invert prose-base md:prose-lg prose-zinc max-w-none 
                    prose-headings:font-bold prose-headings:text-blue-400 prose-headings:scroll-mt-24
                    prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline
                    prose-code:text-zinc-300 prose-code:bg-zinc-900 prose-code:px-1 prose-code:rounded prose-code:before:content-none prose-code:after:content-none
                    [&_pre>code]:bg-transparent [&_pre>code]:p-0 [&_pre>code]:rounded-none [&_pre>code]:text-inherit
                    prose-pre:bg-zinc-900 prose-pre:border prose-pre:border-zinc-800 prose-pre:relative
                    prose-blockquote:border-l-blue-500 prose-blockquote:bg-zinc-900/30 prose-blockquote:py-1 prose-blockquote:px-4 prose-blockquote:not-italic
                    prose-img:rounded-lg prose-img:border prose-img:border-zinc-800
                    prose-li:marker:text-zinc-500 prose-ol:list-inside prose-ul:list-inside prose-ol:pl-0 prose-ul:pl-0">
                    
                    <div class="not-prose mb-8 md:mb-12">
                        {heroImage && (
                            <div class="mb-6 md:mb-8 rounded-lg overflow-hidden border border-zinc-800 relative group">
                                <div class="absolute inset-0 bg-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity z-10 pointer-events-none"></div>
                                <Image width={1020} height={510} src={heroImage} alt="" class="w-full h-auto object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-500" />
                                
                                <!-- Image Stats Overlay -->
                                <div class="absolute bottom-0 left-0 right-0 bg-zinc-900/90 border-t border-zinc-800 p-2 text-xs text-zinc-400 flex justify-between transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                                    <span>1020x510</span>
                                    <span>IMAGE_PREVIEW</span>
                                </div>
                            </div>
                        )}
                        <div class="space-y-3 md:space-y-4">
                            <div class="text-zinc-500 font-medium flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-xs md:text-sm border-l-2 border-blue-500 pl-3 md:pl-4">
                                <div>
                                    <span class="text-zinc-600 block text-xs uppercase tracking-wider mb-1">Created</span>
                                    <FormattedDate date={pubDate} />
                                </div>
                                {
                                    updatedDate && (
                                        <div>
                                            <span class="text-zinc-600 block text-xs uppercase tracking-wider mb-1">Modified</span>
                                            <FormattedDate date={updatedDate} />
                                        </div>
                                    )
                                }
                            </div>
                            <h1 class="text-2xl md:text-5xl font-bold tracking-tight text-zinc-100" data-pagefind-meta="title">{title}</h1>
                            <p class="sr-only" data-pagefind-meta="description">{description}</p>
                        </div>
                    </div>
                    
                    <!-- Content Area -->
                    <div data-pagefind-body>
                        <slot />
                    </div>
                    
                    <!-- End of File Marker -->
                    <div class="mt-12 md:mt-16 pt-6 md:pt-8 border-t border-zinc-800 flex items-center justify-between text-zinc-600">
                        <span class="text-blue-500">~</span>
                        <span class="text-xs">EOF</span>
                    </div>

                    <!-- Back Button (Bottom) -->
                    <div class="mt-6 md:mt-8 mb-12 md:mb-16">
                        <a href="/blog" class="inline-flex items-center gap-2 text-zinc-500 hover:text-blue-400 transition-colors group text-sm">
                            <ArrowLeft className="w-3.5 h-3.5 md:w-4 md:h-4 group-hover:-translate-x-1 transition-transform" />
                            <span>cd ..</span>
                        </a>
                    </div>

                    <!-- Related Posts -->
                    {relatedPosts.length > 0 && (
                        <div class="not-prose pt-8 md:pt-12 border-t border-zinc-800/50">
                            <h3 class="text-lg md:text-xl font-bold text-zinc-100 mb-6 flex items-center gap-2">
                                <span class="text-blue-500">$</span> ls ./more-articles
                            </h3>
                            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                {relatedPosts.map((post) => (
                                    <a href={`/blog/${post.id}/`} class="group block bg-zinc-900/50 border border-zinc-800 rounded-xl overflow-hidden hover:border-blue-500/30 hover:bg-zinc-900 transition-all">
                                        {/* Image */}
                                        {post.data.heroImage && (
                                            <div class="aspect-video relative overflow-hidden bg-zinc-800">
                                                <Image 
                                                    src={post.data.heroImage} 
                                                    alt={post.data.title}
                                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                                    width={400}
                                                    height={225}
                                                />
                                                <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/80 to-transparent"></div>
                                            </div>
                                        )}
                                        
                                        {/* Content */}
                                        <div class="p-4">
                                            <div class="flex items-center gap-2 mb-2">
                                                <time class="text-xs text-zinc-500 font-mono">
                                                    <FormattedDate date={post.data.pubDate} />
                                                </time>
                                            </div>
                                            <h4 class="font-semibold text-zinc-200 group-hover:text-blue-400 transition-colors text-sm md:text-base leading-snug mb-2 line-clamp-2">
                                                {post.data.title}
                                            </h4>
                                            <p class="text-xs text-zinc-500 line-clamp-2 leading-relaxed">
                                                {post.data.description}
                                            </p>
                                            
                                            {/* Read more */}
                                            <div class="mt-3 flex items-center gap-2 text-xs text-blue-500 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <span>→ Read</span>
                                            </div>
                                        </div>
                                    </a>
                                ))}
                            </div>
                        </div>
                    )}
                </article>
            </div>
		</main>
		<Footer />

        <script>
            // In-Page Search Modal (Desktop)
            document.addEventListener('DOMContentLoaded', () => {
                const searchModal = document.getElementById('search-modal');
                const searchModalContent = document.getElementById('search-modal-content');
                const searchInput = document.getElementById('page-search-input') as HTMLInputElement;
                const searchResults = document.getElementById('search-results');
                
                if (!searchModal || !searchModalContent || !searchInput || !searchResults) return;

                const searchTriggerToc = document.getElementById('search-trigger-toc');
                let searchableContent: { text: string; element: HTMLElement; type: string }[] = [];
                let currentResults: any[] = [];
                let selectedIndex = -1;

                // Open with animations
                const openSearch = () => {
                    searchModal.classList.remove('hidden');
                    searchModal.classList.add('flex');
                    // Trigger animation
                    requestAnimationFrame(() => {
                        searchModal.classList.remove('bg-zinc-950/0', 'backdrop-blur-0');
                        searchModal.classList.add('bg-zinc-950/95', 'backdrop-blur-xl');
                        searchModalContent.classList.remove('translate-y-4', 'opacity-0');
                        searchModalContent.classList.add('translate-y-0', 'opacity-100');
                    });
                    searchInput.focus();
                    selectedIndex = -1;
                };

                // Close with animations
                const closeSearch = () => {
                    searchModal.classList.remove('bg-zinc-950/95', 'backdrop-blur-xl');
                    searchModal.classList.add('bg-zinc-950/0', 'backdrop-blur-0');
                    searchModalContent.classList.remove('translate-y-0', 'opacity-100');
                    searchModalContent.classList.add('translate-y-4', 'opacity-0');
                    
                    setTimeout(() => {
                        searchModal.classList.add('hidden');
                        searchModal.classList.remove('flex');
                        searchInput.value = '';
                        searchResults.innerHTML = '<div class="p-4 text-center text-zinc-600 text-sm">Type to search...</div>';
                        selectedIndex = -1;
                    }, 300);
                };
                
                searchTriggerToc?.addEventListener('click', openSearch);

                // Build searchable index
                const article = document.querySelector('article');
                if (article) {
                    // Index headings
                    article.querySelectorAll('h1, h2, h3, h4, h5, h6').forEach(heading => {
                        if (heading.textContent && heading.id) {
                            searchableContent.push({
                                text: heading.textContent.trim(),
                                element: heading as HTMLElement,
                                type: 'heading'
                            });
                        }
                    });

                    // Index paragraphs
                    article.querySelectorAll('p').forEach(p => {
                        if (p.textContent && p.textContent.trim().length > 20) {
                            searchableContent.push({
                                text: p.textContent.trim(),
                                element: p as HTMLElement,
                                type: 'paragraph'
                            });
                        }
                    });

                    // Index code blocks
                    article.querySelectorAll('pre code').forEach(code => {
                        if (code.textContent) {
                            searchableContent.push({
                                text: code.textContent.trim(),
                                element: code.parentElement as HTMLElement,
                                type: 'code'
                            });
                        }
                    });
                }

                // Keyboard shortcuts
                document.addEventListener('keydown', (e) => {
                    // Open modal with Ctrl+K (but NOT Ctrl+Shift+K - that's for global search)
                    if ((e.ctrlKey || e.metaKey) && e.key === 'k' && !e.shiftKey) {
                        e.preventDefault();
                        if (window.innerWidth >= 768) { // Desktop only
                            openSearch();
                        }
                    }
                    
                    // Close with ESC
                    if (e.key === 'Escape' && !searchModal.classList.contains('hidden')) {
                        closeSearch();
                    }
                });

                // Arrow key navigation and Enter in search
                searchInput.addEventListener('keydown', (e) => {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        if (currentResults.length > 0) {
                            selectedIndex = (selectedIndex + 1) % currentResults.length;
                            updateSelection();
                        }
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        if (currentResults.length > 0) {
                            selectedIndex = selectedIndex <= 0 ? currentResults.length - 1 : selectedIndex - 1;
                            updateSelection();
                        }
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (currentResults.length > 0) {
                            // If no selection, go to first result
                            const targetIndex = selectedIndex >= 0 ? selectedIndex : 0;
                            if (currentResults[targetIndex]) {
                                navigateToResult(currentResults[targetIndex].element);
                            }
                        }
                    }
                });

                // Update visual selection
                const updateSelection = () => {
                    const buttons = searchResults.querySelectorAll('button');
                    buttons.forEach((btn, index) => {
                        if (index === selectedIndex) {
                            btn.classList.add('bg-zinc-800/80', 'border-blue-500/50');
                            btn.classList.remove('hover:bg-zinc-800/50');
                            btn.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
                        } else {
                            btn.classList.remove('bg-zinc-800/80', 'border-blue-500/50');
                            btn.classList.add('hover:bg-zinc-800/50');
                        }
                    });
                };

                // Navigate to result
                const navigateToResult = (element: HTMLElement) => {
                    closeSearch();
                    setTimeout(() => {
                        element.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        element.style.backgroundColor = 'rgba(59, 130, 246, 0.2)';
                        setTimeout(() => {
                            element.style.backgroundColor = '';
                        }, 2000);
                    }, 100);
                };

                // Close when clicking outside
                searchModal.addEventListener('click', (e) => {
                    if (e.target === searchModal) {
                        closeSearch();
                    }
                });

                // Search functionality
                searchInput.addEventListener('input', (e) => {
                    const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
                    selectedIndex = -1; // Reset selection on new search
                    
                    if (!query) {
                        searchResults.innerHTML = '<div class="p-4 text-center text-zinc-600 text-sm">Type to search...</div>';
                        currentResults = [];
                        return;
                    }

                    const results = searchableContent.filter(item => 
                        item.text.toLowerCase().includes(query)
                    ).slice(0, 10); // Limit to 10 results

                    currentResults = results;

                    if (results.length === 0) {
                        searchResults.innerHTML = '<div class="p-4 text-center text-zinc-500 text-sm">No results found</div>';
                        currentResults = [];
                        return;
                    }

                    searchResults.innerHTML = results.map(result => {
                        const preview = result.text.substring(0, 150) + (result.text.length > 150 ? '...' : '');
                        const highlightedPreview = preview.replace(
                            new RegExp(query, 'gi'),
                            match => `<mark class="bg-blue-500/30 text-blue-200">${match}</mark>`
                        );
                        
                        const typeLabel = result.type === 'heading' ? '§' : result.type === 'code' ? '{...}' : '¶';
                        const typeColor = result.type === 'heading' ? 'text-blue-500' : result.type === 'code' ? 'text-purple-500' : 'text-zinc-500';
                        
                        return `
                            <button 
                                class="w-full text-left px-4 py-3 hover:bg-zinc-800/50 border-b border-zinc-800/50 last:border-b-0 transition-all group"
                                data-element-id="${result.element.id || ''}"
                            >
                                <div class="flex items-start gap-3">
                                    <span class="${typeColor} text-sm font-mono mt-0.5">${typeLabel}</span>
                                    <div class="flex-1 min-w-0">
                                        <div class="text-sm text-zinc-300 group-hover:text-blue-400 transition-colors line-clamp-2">
                                            ${highlightedPreview}
                                        </div>
                                    </div>
                                </div>
                            </button>
                        `;
                    }).join('');

                    // Add click handlers to results
                    searchResults.querySelectorAll('button').forEach((button, index) => {
                        button.addEventListener('click', () => {
                            if (currentResults[index]) {
                                navigateToResult(currentResults[index].element);
                            }
                        });
                    });
                });
            });

            // Reading Progress Bar
            document.addEventListener('DOMContentLoaded', () => {
                const progressBar = document.getElementById('progress-bar');
                
                if (progressBar) {
                    let ticking = false;
                    
                    const updateProgress = () => {
                        const scrollTop = window.scrollY;
                        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
                        const scrollPercent = (scrollTop / docHeight) * 100;
                        
                        progressBar.style.width = `${Math.min(scrollPercent, 100)}%`;
                        ticking = false;
                    };
                    
                    const requestUpdate = () => {
                        if (!ticking) {
                            requestAnimationFrame(updateProgress);
                            ticking = true;
                        }
                    };
                    
                    window.addEventListener('scroll', requestUpdate, { passive: true });
                    updateProgress(); // Initial call
                }
            });

            // Code block copy functionality
            document.addEventListener('DOMContentLoaded', () => {
                const preBlocks = Array.from(document.querySelectorAll('pre'));
                
                preBlocks.forEach(pre => {
                    const wrapper = document.createElement('div');
                    wrapper.className = 'relative group';
                    
                    if (pre.parentNode) {
                        pre.parentNode.insertBefore(wrapper, pre);
                        wrapper.appendChild(pre);
                    }

                    const button = document.createElement('button');
                    button.className = 'absolute top-2 md:top-3 right-2 md:right-3 w-7 h-7 md:w-8 md:h-8 flex items-center justify-center bg-zinc-800 text-zinc-400 hover:text-white hover:bg-zinc-700 rounded transition-all opacity-0 group-hover:opacity-100 border border-zinc-700 z-10';
                    button.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-copy md:w-4 md:h-4"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
                    `;
                    button.setAttribute('aria-label', 'Copy code');
                    
                    wrapper.appendChild(button);
                    
                    button.addEventListener('click', async () => {
                        const code = pre.querySelector('code')?.innerText;
                        if (code) {
                            await navigator.clipboard.writeText(code);
                            
                            const originalIcon = button.innerHTML;
                            button.innerHTML = `
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check text-green-500 md:w-4 md:h-4"><path d="M20 6 9 17l-5-5"/></svg>
                            `;
                            button.classList.add('border-green-500/50', 'bg-green-500/10');
                            
                            setTimeout(() => {
                                button.innerHTML = originalIcon;
                                button.classList.remove('border-green-500/50', 'bg-green-500/10');
                            }, 2000);
                        }
                    });
                });
            });

            // Table of Contents Active State
            document.addEventListener('DOMContentLoaded', () => {
                const headings = document.querySelectorAll('h2[id], h3[id], h4[id]');
                const tocLinks = document.querySelectorAll('.toc-link');
                
                if (!headings.length) return;

                let isManualScroll = false;
                let manualScrollTimeout;

                const setActive = (id) => {
                    tocLinks.forEach(link => {
                        link.classList.remove('text-blue-400', 'border-blue-500', 'font-bold');
                        link.classList.add('text-zinc-500', 'border-transparent');
                    });
                    
                    const link = document.querySelector(`.toc-link[data-slug="${id}"]`) as HTMLElement;
                    if (link) {
                        link.classList.remove('text-zinc-500', 'border-transparent');
                        link.classList.add('text-blue-400', 'border-blue-500', 'font-bold');
                        
                        // Scroll the active link into view within the TOC container
                        const tocContainer = document.querySelector('.custom-scrollbar');
                        if (tocContainer) {
                            const linkRect = link.getBoundingClientRect();
                            const containerRect = tocContainer.getBoundingClientRect();
                            
                            // Check if link is outside the visible area
                            if (linkRect.top < containerRect.top || linkRect.bottom > containerRect.bottom) {
                                link.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                            }
                        }
                    }
                };

                const observerCallback = (entries) => {
                    if (isManualScroll) return; // Skip updates during manual scroll

                    let activeHeading = null;
                    
                    // Prioritize headings that are "entering" the view near the top
                    for (const entry of entries) {
                        if (entry.isIntersecting) {
                            activeHeading = entry.target;
                        }
                    }

                    if (activeHeading) {
                        setActive(activeHeading.id);
                    }
                };

                const observer = new IntersectionObserver(observerCallback, {
                    rootMargin: '-100px 0px -66% 0px',
                    threshold: 0
                });

                headings.forEach(h => observer.observe(h));

                tocLinks.forEach(link => {
                    link.addEventListener('click', (e) => {
                        const href = link.getAttribute('href');
                        const id = href.replace('#', '');
                        
                        // 1. Set manual scroll flag
                        isManualScroll = true;
                        
                        // 2. Clear any existing timeout
                        if (manualScrollTimeout) clearTimeout(manualScrollTimeout);
                        
                        // 3. Immediately highlight the clicked link
                        setActive(id);
                        
                        // 4. Reset flag after scroll animation (approx 1s)
                        manualScrollTimeout = setTimeout(() => {
                            isManualScroll = false;
                        }, 1000);
                    });
                });

                window.addEventListener('scroll', () => {
                    if (isManualScroll) return;

                    const scrollPosition = window.scrollY + window.innerHeight;
                    const documentHeight = document.documentElement.scrollHeight;
                    
                    if (scrollPosition >= documentHeight - 50) {
                        const lastHeading = headings[headings.length - 1];
                        if (lastHeading) setActive(lastHeading.id);
                    }
                });
            });
        </script>
