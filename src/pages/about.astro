---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import Avatar from '../assets/avatar.webp';
import { SITE_TITLE } from '../consts';
import { Github, Twitter, MapPin, Code2, Heart, Gamepad2, Terminal, Sparkles } from 'lucide-react';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description="Learning to code, one commit at a time" />
	</head>
	<body class="bg-zinc-950 text-zinc-100 flex flex-col min-h-screen font-mono">
		<Header />
		<main class="w-full max-w-3xl mx-auto px-4 py-8 md:py-16 flex-grow">
			<!-- Page Header -->
			<div class="mb-8">
				<div class="flex items-center gap-2 text-zinc-500 text-sm mb-4" aria-hidden="true">
					<span class="text-blue-500">$</span>
					<span>cat ~/about.md</span>
				</div>
			</div>

			<!-- Profile Section -->
			<div class="flex flex-col sm:flex-row gap-6 sm:gap-8 items-center sm:items-start mb-12">
				<!-- Avatar -->
				<div class="relative flex-shrink-0">
					<div class="absolute -inset-1 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full blur opacity-30"></div>
					<div class="relative w-28 h-28 rounded-full overflow-hidden ring-2 ring-zinc-700">
						<Image 
							src={Avatar} 
							alt="ZeroLivesLeft" 
							class="w-full h-full object-cover"
							width={112}
							height={112}
						/>
					</div>
				</div>

				<!-- Name & Bio -->
				<div class="text-center sm:text-left">
					<h1 class="text-2xl md:text-3xl font-bold text-zinc-100 mb-2">
						ZeroLivesLeft
					</h1>
					<p class="text-zinc-400 mb-4">
						Aspiring developer documenting the journey from zero to hero.
					</p>
					
					<!-- Quick Info -->
					<div class="flex flex-wrap gap-4 justify-center sm:justify-start text-sm text-zinc-500">
						<div class="flex items-center gap-1.5">
							<Terminal size={14} className="text-blue-500" />
							<span>Learning in public</span>
						</div>
						<div class="flex items-center gap-1.5">
							<Sparkles size={14} className="text-red-500" />
							<span>Powered by Dr Pepper Zero</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Content Sections -->
			<div class="space-y-10">
				<!-- About -->
				<section>
					<h2 class="text-lg font-bold text-zinc-200 mb-4 flex items-center gap-2">
						<span class="text-blue-500" aria-hidden="true">#</span> About
					</h2>
					<div class="text-zinc-400 space-y-4 leading-relaxed">
						<p>
							Hey there! I'm a self-taught developer on a mission to level up my coding skills. 
							This blog is my digital garden where I document everything I learn along the way.
						</p>
						<p>
							I believe in learning in public â€” sharing both the wins and the struggles. 
							If my notes help even one person avoid a bug I spent hours debugging, it's worth it.
						</p>
					</div>
				</section>

				<!-- Currently Learning -->
				<section>
					<h2 class="text-lg font-bold text-zinc-200 mb-4 flex items-center gap-2">
						<span class="text-blue-500" aria-hidden="true">#</span> Currently Learning
					</h2>
					<div class="flex flex-wrap gap-2">
						{['TypeScript', 'Astro', 'React', 'Tailwind CSS', 'Node.js'].map((tech) => (
							<span class="px-3 py-1.5 bg-zinc-900 border border-zinc-800 rounded-lg text-sm text-zinc-300">
								{tech}
							</span>
						))}
					</div>
				</section>

				<!-- Interests -->
				<section>
					<h2 class="text-lg font-bold text-zinc-200 mb-4 flex items-center gap-2">
						<span class="text-blue-500" aria-hidden="true">#</span> When I'm Not Coding
					</h2>
					<div class="grid sm:grid-cols-2 gap-3">
						<div class="flex items-center gap-3 p-3 bg-zinc-900/50 border border-zinc-800 rounded-lg">
							<Gamepad2 size={18} className="text-purple-500" />
							<span class="text-zinc-400">Gaming</span>
						</div>
						<div class="flex items-center gap-3 p-3 bg-zinc-900/50 border border-zinc-800 rounded-lg">
							<Sparkles size={18} className="text-red-500" />
							<span class="text-zinc-400">Drinking Dr Pepper Zero</span>
						</div>
					</div>
				</section>

				<!-- Connect -->
				<section>
					<h2 class="text-lg font-bold text-zinc-200 mb-4 flex items-center gap-2">
						<span class="text-blue-500" aria-hidden="true">#</span> Connect
					</h2>
					<div class="flex flex-wrap gap-3">
						<a 
							href="https://github.com/zerolivesleft" 
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg text-zinc-300 hover:border-blue-500/50 hover:text-blue-400 transition-colors"
						>
							<Github size={18} />
							<span>GitHub</span>
						</a>
						<a 
							href="https://x.com/ZeroLiv3sLeft" 
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg text-zinc-300 hover:border-blue-500/50 hover:text-blue-400 transition-colors"
						>
							<Twitter size={18} />
							<span>Twitter</span>
						</a>
						<a 
							href="https://bsky.app/profile/zer0.live" 
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg text-zinc-300 hover:border-blue-500/50 hover:text-blue-400 transition-colors"
						>
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 600 530" fill="currentColor">
								<path d="m135.72 44.03c66.496 49.921 138.02 151.14 164.28 205.46 26.262-54.316 97.782-155.54 164.28-205.46 47.98-36.021 125.72-63.892 125.72 24.795 0 17.712-10.155 148.79-16.111 170.07-20.703 73.984-96.144 92.854-163.25 81.433 117.3 19.964 147.14 86.092 82.697 152.22-122.39 125.59-175.91-31.511-189.63-71.766-2.514-7.3797-3.6904-10.832-3.7077-7.8964-0.0174-2.9357-1.1937 0.51669-3.7077 7.8964-13.714 40.255-67.233 197.36-189.63 71.766-64.444-66.128-34.605-132.26 82.697-152.22-67.108 11.421-142.55-7.4491-163.25-81.433-5.9562-21.282-16.111-152.36-16.111-170.07 0-88.687 77.742-60.816 125.72-24.795z"/>
							</svg>
							<span>Bluesky</span>
						</a>
					</div>
				</section>

				<!-- Terminal signature -->
				<div class="pt-8 border-t border-zinc-800">
					<div class="text-sm text-zinc-600 font-mono">
						<span class="text-zinc-500">// EOF</span>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
